<div class="max-w-xl mx-auto my-16 p-8 bg-white shadow-lg rounded-2xl">
  <h2 class="text-2xl font-bold text-center mb-6">Contact Us</h2>

  {% form 'contact', id: 'ContactForm', class: 'space-y-5' %}
    {% if form.posted_successfully? %}
      <p class="text-green-600 font-semibold text-center">Thanks for contacting us! Weâ€™ll get back to you soon.</p>
    {% endif %}

    {% if form.errors %}
      <ul class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-md mb-4">
        {% for field in form.errors %}
          <li>{{ form.errors.messages[field] }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    <div>
      <label for="ContactFormName" class="block mb-2 font-medium text-gray-700">Name</label>
      <input
        type="text"
        id="ContactFormName"
        name="contact[Name]"
        value="{{ form.name }}"
        required
        class="w-full border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
      >
    </div>

    <div>
      <label for="ContactFormEmail" class="block mb-2 font-medium text-gray-700">Email</label>
      <input
        type="email"
        id="ContactFormEmail"
        name="contact[email]"
        value="{{ form.email }}"
        required
        class="w-full border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
      >
    </div>

    <div>
      <label for="ContactFormMessage" class="block mb-2 font-medium text-gray-700">Message</label>
      <textarea
        id="ContactFormMessage"
        name="contact[body]"
        rows="5"
        required
        class="w-full border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
      >{{ form.body }}</textarea>
    </div>

    <button
      type="submit"
      class="w-full bg-indigo-600 text-white font-semibold py-3 rounded-lg hover:bg-indigo-700 transition-colors duration-200"
    >
      Send Message
    </button>
  {% endform %}
</div>



{% schema %}
{
  "name": "Contact Form",
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
