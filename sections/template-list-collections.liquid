<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-6 text-center">
    {% if section.settings.heading != blank %}
      <h2 class="text-4xl font-bold text-gray-800 mb-10">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% assign collections_to_show = section.settings.collections %}
    {% if collections_to_show == blank %}
      {% assign collections_to_show = collections %}
    {% endif %}

    {% if collections_to_show.size > 0 %}
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        {% for collection in collections_to_show %}
          {% if collection.products_count > 0 %}
               <a href="{{ collection.url }}" class="block group">
               <div class="bg-white rounded-lg shadow hover:shadow-lg transition overflow-hidden">
               <div class="h-56 bg-gray-100">
                    {% if collection.image %}
                    <img 
                         src="{{ collection.image | img_url: 'medium' }}" 
                         alt="{{ collection.title }}" 
                         class="w-full h-full object-cover group-hover:opacity-90 transition"
                    />
                    {% else %}
                    {{ 'collection-1' | placeholder_svg_tag: 'w-full h-full object-cover group-hover:opacity-90 transition' }}
                    {% endif %}
               </div>

               <div class="p-4">
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">
                    {{ collection.title }}
                    </h3>
                    {% if section.settings.show_description and collection.description != blank %}
                    <p class="text-gray-500 text-sm line-clamp-2">
                         {{ collection.description | strip_html | truncatewords: 20 }}
                    </p>
                    {% endif %}
               </div>
               </div>
               </a>
          {% endif %}
          
        {% endfor %}
      </div>
    {% else %}
      <p class="text-gray-500 mt-6">No collections found.</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Collection List",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Collection"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show Collection Description",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Collection List"
    }
  ]
}
{% endschema %}
