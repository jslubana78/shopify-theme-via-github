<div class="relative bg-white" x-data="{ mobileOpen: false }" x-cloak>
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10">
      <!-- STORE NAME / LOGO -->
      <div class="flex justify-start lg:flex-1 truncate">
        <h1 class="text-xl font-bold truncate">{{ section.settings.store_name | default: shop.name }}</h1>
      </div>

      <!-- MOBILE MENU BUTTON (visible on md:hidden) -->
      <div class="-mr-2 -my-2 ml-3 md:hidden">
        <button
          type="button"
          class="bg-white p-2 inline-flex items-center justify-center focus:outline-none"
          x-on:click="mobileOpen = !mobileOpen"
          :aria-expanded="mobileOpen"
          aria-controls="mobile-menu"
        >
          {% render 'heroicon-menu' %}
        </button>
      </div>

      <!-- DESKTOP NAV -->
      <nav class="hidden md:flex space-x-10">
        {% for link in linklists[section.settings.main_menu].links %}
          {% if link.links.size > 0 %}
            <!-- each dropdown has its own Alpine state -->
            <div class="relative" x-data="{ open: false }">
              <button
                type="button"
                class="inline-flex items-center text-base text-gray-500 hover:text-gray-900"
                x-on:click="open = !open"
                :aria-expanded="open"
                aria-controls="dropdown-{{ forloop.index }}"
              >
                {{ link.title }} {% render 'heroicon-chevron-down' %}
              </button>

              <!-- dropdown panel -->
              <div
                id="dropdown-{{ forloop.index }}"
                class="absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2"
                x-show="open"
                x-cloak
                @click.away="open = false"
                @keydown.escape.window="open = false"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 translate-y-1"
                x-transition:enter-end="opacity-100 translate-y-0"
                x-transition:leave="transition ease-in duration-150"
                x-transition:leave-start="opacity-100 translate-y-0"
                x-transition:leave-end="opacity-0 translate-y-1"
              >
                <div class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                  <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                    {% for sublink in link.links %}
                      <a href="{{ sublink.url }}" class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-100">
                        <div class="ml-4">
                          <p class="text-gray-900 text-base font-medium">{{ sublink.title }}</p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <div class="relative">
              <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-900">{{ link.title }}</a>
            </div>
          {% endif %}
        {% endfor %}
      </nav>

      <!-- MOBILE MENU PANEL (hidden by default) -->
      <div
        id="mobile-menu"
        class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden"
        x-show="mobileOpen"
        x-cloak
        @click.away="mobileOpen = false"
        @keydown.escape.window="mobileOpen = false"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
      >
        <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
          <div class="p-5 divide-y-2 divide-gray-50">
            <!-- header + close -->
            <div class="flex items-center justify-between pb-3">
              <h1 class="text-lg text-gray-500">{{section.settings.store_name | default: shop.name}}</h1>
              <button
                type="button"
                class="bg-white rounded-md p-2 text-gray-500"
                x-on:click="mobileOpen = false"
                aria-label="Close menu"
              >
                {% render 'heroicon-close' %}
              </button>
            </div>

            <!-- mobile links -->
            <div class="pt-3">
              <nav class="grid gap-y-7">
                {% for link in linklists[section.settings.main_menu].links %}
                  {% if link.links.size > 0 %}
                    <!-- each mobile parent gets its own state so child links collapse/expand -->
                    <div x-data="{ openMobile: false }">
                      <button
                        type="button"
                        class="w-full flex items-center justify-between text-base text-gray-500 hover:text-gray-900 p-3 rounded-md"
                        x-on:click="openMobile = !openMobile"
                        :aria-expanded="openMobile"
                        aria-controls="mobile-sub-{{ forloop.index }}"
                      >
                        <span>{{ link.title }}</span>
                        <!-- small chevron (you can replace with your heroicon) -->
                        <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                          <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.25 8.29a.75.75 0 01-.02-1.08z" clip-rule="evenodd" />
                        </svg>
                      </button>

                      <div
                        id="mobile-sub-{{ forloop.index }}"
                        class="pl-4 mt-2"
                        x-show="openMobile"
                        x-cloak
                        x-transition
                      >
                        {% for sublink in link.links %}
                          <a href="{{ sublink.url }}" class="block -m-3 p-3 mt-2 rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                            <span class="ml-3 text-base font-medium">{{ sublink.title }}</span>
                          </a>
                        {% endfor %}
                      </div>
                    </div>
                  {% else %}
                    <div>

                      <a href="{{ link.url }}" class="-m-3 p-3 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                        {{ link.title }}
                      </a>
                    </div>
                  {% endif %}
                {% endfor %}
              </nav>
            </div>
          </div>
        </div>
      </div>

      <!-- CART & AUTH (desktop) -->
      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        <a href="{{ cart.url }}" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
          {% render 'heroicon-cart' %}
        </a>
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_login_url }}" class="text-base text-gray-500 hover:text-gray-900">Login</a>
          <a href="{{ routes.account_register_url }}" class="text-base text-gray-500 hover:text-gray-900">Register</a>
        {% endif %}
      </div>
    </div>
  </div> 
</div>

{% schema %}
  {
    "name": "HEADER",
    "settings": [
      {
      "type": "text",
      "id": "store_name",
      "label": "Store name override",
      "default": "Store Name"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main menu",
      "default": "main-menu"
    }
    ],
  }
{% endschema %}