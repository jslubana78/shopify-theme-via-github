

<div class="max-w-7xl mx-auto">
     <a href="{{ routes.collections_url }}" class="text-sm text-blue-600 hover:underline mb-4 inline-block">&larr; Back to Collections</a>
        <h1 class="text-xl font-bold text-gray-900 text-center mb-12">{{ collection.title }}</h1>
        
        
        {% paginate collection.products by section.settings.products_per_page %}
               <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
               {% if collection.products.size > 0 %}
                    {% for product in collection.products %}
                         <!-- Product 1 -->
                         {% render 'product-card', product: product, show_vendor_info: section.settings.show_vendor_info %}
                         
                    {% endfor %}
                    
               {% else %}
                    <div>
                         No products found in this collection.
                    </div> 
               {% endif %}
          </div>
          {% render 'pagination', paginate: paginate %}
          {% endpaginate %}
          
</div>

{% schema %}   
{
  "name": "Collection",
  "settings": [
     {
      "type": "checkbox",
      "id": "show_vendor_info",
      "label": "Show Vendor Info",
      "default": true
     },
     {
      "type": "range",
      "id": "products_per_page",
      "label": "Products Per Page",
      "default": 5,
     "min": 1,
     "max": 10,
     "step": 1
     }
  ],
  "presets": [
    {
      "name": "Template Collection",
      "category": "Collections"
    }
  ]
}
{% endschema %}
